<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="loginEdiText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:background">@drawable/et_rounded</item>
        <item name="android:paddingStart">@dimen/size_16</item>
    </style>

    <style name="loginTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
    </style>

    <style name="roundedButtonPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_64</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="backgroundTint">@color/segurapp_black</item>
        <item name="android:foreground">@drawable/et_rounded</item>
        <item name="android:textColor">@color/segurapp_white</item>
    </style>

    <style name="buttomPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_64</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="backgroundTint">@color/segurapp_black</item>
        <item name="android:foreground">@drawable/bt_foreground</item>
        <item name="android:textColor">@color/segurapp_white</item>
    </style>

    <style name="buttomSecundary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_64</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="backgroundTint">@color/segurapp_white</item>
        <item name="android:foreground">@drawable/bt_border</item>
        <item name="android:textColor">@color/segurapp_black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="login_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size_48</item>
        <item name="android:layout_marginRight">@dimen/size_48</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_48</item>
        <item name="android:textColor">@color/segurapp_black</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">Roboto</item>
    </style>

    <!-- Get Started Activity !-->
    <style name="get_started_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_72</item>
        <item name="android:drawableTint">@color/segurapp_black</item>
        <item name="android:drawableEnd">@drawable/ic_edit_24</item>
        <item name="android:drawablePadding">@dimen/size_16</item>
        <item name="android:layout_marginBottom">@dimen/size_32</item>
    </style>

</resources>